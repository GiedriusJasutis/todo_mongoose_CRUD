<%- include('includes/head') %>

<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <form action="<%=(signUp)? '/signUp':'/login'%>" method="post">
        <div class="form-group">
          <label for="username">Email</label>
          <input
            id="username"
            class="form-control"
            type="email"
            name="email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            id="password"
            class="form-control"
            type="password"
            name="password"
          />
        </div>
        <% if(signUp){ %>
        <div class="form-group">
          <label for="password">Confirm password</label>
          <input
            id="confirmPassword"
            class="form-control"
            type="password"
            name="confirmPassword"
          />
        </div>
        <% } %>

        <a class="btn btn-primary float-left" href="/">
          Back
        </a>
        <button
          type="submit"
          class="btn btn-primary float-right"
          data-dismiss="modal"
        >
          <%=(signUp)? 'SignUp':'Login'%>
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('includes/end')%>
